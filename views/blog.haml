-content_for :body_class do
  = "blog"

- if !request.xhr?
  %h1.h1
    = link_to('Blog', '/blog')

- @entries.each do |entry|
  = partial(:entry, :locals => {:entry => entry})
  
- unless @entries.current_page >= @entries.total_pages
  - next_page_link "Show more posts"

-content_for :footer_scripts do
  = javascript_include_tag 'load-more.js'
