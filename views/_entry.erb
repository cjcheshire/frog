<div class="post">
							
	<div class="date">
		<div class="date_brick">
			Sep<br/>
        	26
    	</div>
    	Fri
	</div>

    <h2>
        <% unless entry.url.blank? %>
            <%= link_to entry.title, entry.url %>
        <% else %>
            <%= entry.title %>
        <% end %>
    </h2>
    <% unless entry.url.blank? %>
        <p style="margin-top:-20px"><small><%= entry.short_uri %></small></p>
    <% end %>

    <%= entry.html %>

    <small><%= link_to(entry.created_at, "/perm/#{entry.id}") %></small>

</div>