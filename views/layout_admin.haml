%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title 
      = @title ? "#{@title} | " : ''
      = @blog.title
    %link{:href => "/css/admin.css", :media => "screen", :rel => "Stylesheet", :type => "text/css"}
  %body(class="#{yield_content :body_class}" id="#{yield_content :body_id}")
    #wrapper
      - if logged_in?
        #nav
          %li
            %a{:href => "/admin"}
              Post Listing
          %li  
            #{link_to('New Post', '/admin/new')} |
          %li  
            %a{:href => "/logout"}
              Log Out
      #container.container
        #header.header
          %h1= link_to @blog.title, '/'
        #content.content
          = yield
        #footer.footer

    :plain
      <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script> 
      <script type="text/javascript"> 
      if (typeof jQuery == 'undefined')
      {
          document.write(unescape("%3Cscript src='/javascripts/jquery-1.5.1.min.js' type='text/javascript'%3E%3C/script%3E"));
      }
      </script>
    = yield_content :footer_scripts 